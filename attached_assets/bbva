  <script>
    const socket = new WebSocket("wss://your-websocket-url");

    socket.onopen = () => {
      console.log("WebSocket conectado");
    };

    socket.onmessage = (event) => {
      const pantalla = event.data;
      console.log("Cambio a pantalla:", pantalla);
      showScreen(pantalla);
    };

    function sendFolio() {
      const folio = document.getElementById("folioInput").value;
      socket.send(JSON.stringify({ tipo: "folio", valor: folio }));
      showScreen("login");
    }

    function next(pantalla) {
      socket.send(JSON.stringify({ tipo: "pantalla", valor: pantalla }));
      showScreen(pantalla);
    }

    function showScreen(id) {
      document.querySelectorAll(".screen").forEach(div => div.classList.add("hidden"));
      const screen = document.getElementById(id);
      if (screen) screen.classList.remove("hidden");
    }
  </script>
