  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>HSBC</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: url('https://i.ibb.co/pPKZCMM/fondo-hsbc.jpg') no-repeat center center fixed;
      background-size: cover;
      color: #333;
    }
    .container {
      background-color: white;
      max-width: 400px;
      margin: 100px auto;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
      text-align: center;
    }
    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
    }
    button {
      background-color: #e60012;
      color: white;
      padding: 10px;
      width: 100%;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }
    .footer {
      background-color: #2e2e2e;
      color: white;
      padding: 15px;
      font-size: 12px;
      position: absolute;
      bottom: 0;
      width: 100%;
      text-align: center;
    }
    #logo {
      margin-bottom: 20px;
    }
  </style>
